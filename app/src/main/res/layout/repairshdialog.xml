<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_roundrect_white"
    android:orientation="vertical" >

    <TextView
        android:text="审批意见"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_for_nineteen"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/test"
            android:layout_marginLeft="15dp"
            android:text="验收意见"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_for_fifteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et"
            android:layout_toRightOf="@+id/test"
            android:background="@null"
            android:cursorVisible="false"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_size_for_fifteen"
            android:hint="请输入不超过300字的验收意见"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/off_commit"
            android:layout_marginRight="15dp"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/disease_flag_text_bg_dsc"
            android:background="@color/line_bh_new_top"
            android:layout_width="100dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/commit"
            android:layout_marginLeft="15dp"
            android:text="通过"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/disease_flag_text_bg_dsc"
            android:layout_width="100dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/NOcommit"
            android:layout_marginLeft="15dp"
            android:text="不通过"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/disease_flag_text_bg_dsc"
            android:layout_width="100dp"
            android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>