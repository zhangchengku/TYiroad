<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_roundrect_white"
    android:orientation="vertical" >

    <TextView
        android:text="当前网络信号差，是否存本地"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_for_sixteen"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/off_commit"
            android:layout_marginRight="15dp"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/disease_flag_text_bg_dsc"
            android:background="@color/line_bh_new_top"
            android:layout_width="100dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/commit"
            android:layout_marginLeft="15dp"
            android:text="确认退回"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/disease_flag_text_bg_dsc"
            android:layout_width="100dp"
            android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>