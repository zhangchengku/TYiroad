<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:text="路段巡查情况"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_for_sixteen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="事件详情"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_for_fourteen" />

        <TextView
            android:textColor="#333333"
            android:id="@+id/czwt_te"
            android:textSize="@dimen/text_size_for_thirteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:text="位于G307和S317交叉口约100米处，发现当事人设置的违章标志标示，已责令其限期拆除" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="添加图片"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_for_sixteen" />
            <ImageView
                android:id="@+id/img"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />
    </LinearLayout>
</RelativeLayout>