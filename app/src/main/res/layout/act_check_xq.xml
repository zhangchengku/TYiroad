<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".check.checkxq.CheckxqActivity">

<include
    android:id="@+id/activity_disease_list_top"
    layout="@layout/layout_header" />

<ScrollView
    android:id="@+id/activity_disease_detail_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/activity_disease_list_top"
    android:layout_above="@+id/yan_shou_bottom_btn_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#f5f5f5"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="病害基本信息"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_for_sixteen" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/disease_com_item_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="采集路线"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_for_fourteen" />

            <TextView
                android:id="@+id/disease_detail_road_line_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_for_fourteen" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/divider"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/disease_com_item_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zh"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_for_fourteen" />

            <TextView
                android:id="@+id/disease_detail_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_for_fourteen" />
        </LinearLayout>
        <com.tyiroad.tyiroad.utils.ListViewForScrollView
            android:id="@+id/rv_lx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/divider"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/disease_com_item_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="施工方式"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_for_fourteen" />

            <TextView
                android:id="@+id/disease_detail_driver_direction_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_for_fourteen" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#f5f5f5"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/disease_com_item_height"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="病害工程信息"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_for_sixteen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/disease_com_item_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="病害类型"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_for_fourteen" />

            <TextView
                android:id="@+id/disease_detail_contract_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_for_fourteen" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/divider"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/disease_com_item_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="施工方式"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_for_fourteen" />

            <TextView
                android:id="@+id/disease_detail_del_list_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_for_fourteen" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/divider"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/sg_te_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/disease_com_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/sgjd_te"
                    android:text="由南宁运营公司在施工阶段修改G35南线G35"
                    android:textColor="@color/disease_flag_text_bg_sgz"
                    android:textSize="@dimen/text_size_for_fourteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"></View>

            <com.tyiroad.tyiroad.utils.ListViewForScrollView
                android:id="@+id/sgjd_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/fa_te_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/disease_com_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/pfjd_te"
                    android:text="由南宁运营公司在施工阶段修改G35南线G35"
                    android:textColor="@color/disease_flag_text_bg_sgz"
                    android:textSize="@dimen/text_size_for_fourteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"></View>

            <com.tyiroad.tyiroad.utils.ListViewForScrollView
                android:id="@+id/pfjd_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ys_te_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/disease_com_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/cjjd_te"
                    android:text="由南宁运营公司在施工阶段修改G35南线G35"
                    android:textColor="@color/disease_flag_text_bg_sgz"
                    android:textSize="@dimen/text_size_for_fourteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"></View>

            <com.tyiroad.tyiroad.utils.ListViewForScrollView
                android:id="@+id/cjjd_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/divider"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="病害照片"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_for_fifteen" />

            <com.tyiroad.tyiroad.utils.NoScroolGridView
                android:id="@+id/cai_ji_picture_add_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:cacheColorHint="@color/transparent"
                android:horizontalSpacing="3dp"
                android:listSelector="@color/transparent"
                android:numColumns="4"
                android:scrollbars="none"
                android:verticalSpacing="3dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="施工照片"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_for_fifteen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shigongqian"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/morentu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="施工前"
                        android:textSize="@dimen/text_size_for_fourteen" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shigongzhong"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/morentu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="施工中"
                        android:textSize="@dimen/text_size_for_fourteen" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shigonghou"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/morentu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="施工后"
                        android:textSize="@dimen/text_size_for_fourteen" />
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="录入意见"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_for_fifteen" />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#FAFAFA"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <EditText
                    android:paddingTop="10dp"
                    android:background="@null"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_for_thirteen"
                    android:id="@+id/czwt_et"
                    android:hint="请录入验收意见"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#f5f5f5" />

    </LinearLayout>
</ScrollView>

<LinearLayout
    android:id="@+id/yan_shou_bottom_btn_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/disease_com_item_height"
    android:layout_alignParentBottom="true">

    <TextView
        android:id="@+id/save"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/com_bottom_left_btn_sel"
        android:gravity="center"
        android:text="退回"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/add_log"
        android:layout_width="235dp"
        android:layout_height="match_parent"
        android:background="@drawable/upload_btn_sel"
        android:gravity="center"
        android:text="通过验收"
        android:textColor="@color/white"
        android:textSize="15dp" />
</LinearLayout>
</RelativeLayout>
