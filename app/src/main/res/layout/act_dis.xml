<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_disease_list_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.tyiroad.tyiroad.disease.DiseaseActivity">

    <include
        android:id="@+id/activity_disease_list_top"
        layout="@layout/layout_header" />

    <RelativeLayout
        android:id="@+id/month_filter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_disease_list_top"
        android:background="@color/xcbh_date_green_bg"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/last_month_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/month_btn_sel"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="上个月"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_for_thirteen" />

        <LinearLayout
            android:id="@+id/activity_disease_list_filter_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_disease_list_filter_time_start_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_size_for_fourteen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="-"
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_size_for_fourteen" />

            <TextView
                android:id="@+id/activity_disease_list_filter_time_end_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_size_for_fourteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/xcbh_riqixuanze_sanjiao" />
        </LinearLayout>


        <TextView
            android:id="@+id/next_month_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/month_btn_sel"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="下个月"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_for_thirteen" />

    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_disease_list_bottom_btn_layout"
        android:layout_below="@+id/month_filter_layout">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/disease_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"></ListView>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <LinearLayout
        android:id="@+id/activity_disease_list_bottom_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/disease_com_item_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_disease_list_ljsc_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#18191a"
            android:gravity="center"
            android:text="立即上传"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_for_sixteen" />

        <TextView
            android:id="@+id/activity_disease_list_bhcj_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#3499e7"
            android:gravity="center"
            android:text="病害采集"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_for_sixteen" />
    </LinearLayout>

    <View
        android:id="@+id/activity_disease_list_zhe_zhao_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        android:visibility="gone">

    </View>

    <View
        android:id="@+id/activity_disease_list_zhe_zhao_top_filter_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/month_filter_layout"
        android:background="#40000000"
        android:visibility="gone">

    </View>
</RelativeLayout>
