<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ddd"
        android:orientation="vertical">

        <include layout="@layout/layout_header" />

        <RelativeLayout
            android:id="@+id/month_filter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_disease_list_filter"
            android:background="@color/xcbh_date_green_bg"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/last_month_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/month_btn_sel"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:text="上一月"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_for_thirteen" />

            <LinearLayout
                android:id="@+id/activity_disease_list_filter_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_disease_list_filter_time_start_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-09"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/text_size_for_fourteen" />


            </LinearLayout>


            <TextView
                android:id="@+id/next_month_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/month_btn_sel"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:text="下一月"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_for_thirteen" />

        </RelativeLayout>


        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.baoyz.swipemenulistview.SwipeMenuListView
                android:id="@+id/logrecycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ddd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/disease_com_item_height"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/shangchuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#18191a"
            android:gravity="center"
            android:text="立即上传"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_for_sixteen" />

        <TextView
            android:id="@+id/add_log"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:background="#3499e7"
            android:gravity="center"
            android:text="现场采集"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_for_sixteen" />
    </LinearLayout>

</RelativeLayout>