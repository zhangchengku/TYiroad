<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/disease_new_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <include
        android:id="@+id/disease_new_top_layout"
        layout="@layout/layout_header" />

    <ScrollView
        android:layout_above="@+id/shang"
        android:id="@+id/activity_disease_new_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/disease_new_top_layout"
        android:layout_toRightOf="@+id/layout_pop_soft"
        android:layout_toEndOf="@+id/layout_pop_soft">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#f5f5f5"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="基本信息"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_for_sixteen" />





            <RelativeLayout
                android:id="@+id/disease_new_road_line_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/disease_com_item_height"
                android:gravity="center_vertical"
                android:background="@drawable/com_listview_selector"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/luxian_warm_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="*"
                    android:textSize="@dimen/text_size_for_twenty"
                    android:textColor="#ef1515"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/disease_new_road_line_txt_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/luxian_warm_txt"
                    android:text="路线编码"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_for_fourteen" />

                <TextView
                    android:id="@+id/disease_new_road_line_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/disease_new_road_line_txt_label"
                    android:layout_toLeftOf="@+id/disease_new_road_line_arrow_img"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="10dp"
                    android:hint="请选择路线"
                    android:textColorHint="@color/text_9"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_for_fourteen"
                    android:singleLine="true"
                    android:ellipsize="middle"/>

                <ImageView
                    android:id="@+id/disease_new_road_line_arrow_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/com_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/divider"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/disease_com_item_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/qdzh_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="*"
                    android:textSize="@dimen/text_size_for_twenty"
                    android:textColor="#ef1515"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/qdzh_te"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/qdzh_x"
                    android:text="起点桩号"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_for_fourteen" />

                <TextView
                    android:id="@+id/qdzh_dw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/qdzh_te"
                    android:layout_marginLeft="35dp"
                    android:text="K"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_for_fourteen" />
                <EditText
                    android:id="@+id/qdzh_text1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    android:maxLength="4"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/qdzh_dw"
                    android:textColor="@color/text_6"
                    android:textColorHint="@color/text_9"
                    android:textSize="@dimen/text_size_for_fourteen"
                    android:hint="请输入"
                    android:background="@color/transparent">
                </EditText>
                <TextView
                    android:id="@+id/qdzh_lj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/qdzh_text1"
                    android:text="+"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_for_fourteen" />
                <EditText
                    android:id="@+id/qdzh_text2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/qdzh_lj"
                    android:textColor="@color/text_6"
                    android:textColorHint="@color/text_9"
                    android:textSize="@dimen/text_size_for_fourteen"
                    android:hint="请输入"
                    android:background="@color/transparent"/>



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/divider"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/disease_com_item_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/zdzh_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="*"
                    android:textSize="@dimen/text_size_for_twenty"
                    android:textColor="#ef1515"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/zdzh_te"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/zdzh_x"
                    android:text="终点桩号"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_for_fourteen" />

                <TextView
                    android:id="@+id/zdzh_dw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/zdzh_te"
                    android:layout_marginLeft="35dp"
                    android:text="K"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_for_fourteen" />
                <EditText
                    android:id="@+id/zdzh_text1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    android:maxLength="4"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/zdzh_dw"
                    android:textColor="@color/text_6"
                    android:textColorHint="@color/text_9"
                    android:textSize="@dimen/text_size_for_fourteen"
                    android:hint="请输入"
                    android:background="@color/transparent">
                </EditText>
                <TextView
                    android:id="@+id/zdzh_lj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/zdzh_text1"
                    android:text="+"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_for_fourteen" />
                <EditText
                    android:id="@+id/zdzh_text2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/zdzh_lj"
                    android:textColor="@color/text_6"
                    android:textColorHint="@color/text_9"
                    android:textSize="@dimen/text_size_for_fourteen"
                    android:hint="请输入"
                    android:background="@color/transparent"/>



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/divider"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/disease_com_item_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="*"
                    android:textSize="@dimen/text_size_for_twenty"
                    android:textColor="#ef1515"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行驶方向"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_for_fourteen" />

                <TextView
                    android:id="@+id/disease_new_driver_direction_shang_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/month_btn_shap"
                    android:text="上行右"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_for_thirteen" />
                <TextView
                    android:id="@+id/disease_new_driver_direction_xia_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/direction_select_shap"
                    android:text="下行左"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_for_thirteen" />
                <TextView
                    android:id="@+id/disease_new_driver_direction_quan_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/direction_select_shap"
                    android:text="双向-全幅"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_for_thirteen" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#f5f5f5"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="工程信息"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_for_sixteen" />
            <LinearLayout
                android:id="@+id/bhlx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/disease_com_item_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:text="*"
                    android:textColor="#ef1515"
                    android:textSize="@dimen/text_size_for_twenty" />

                <TextView
                    android:id="@+id/disease_custom_edit_item_bhlx_label_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="施工单位"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_for_fifteen" />

                <TextView
                    android:id="@+id/disease_custom_edit_item_bhlx_txt_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:ellipsize="middle"
                    android:hint="请选择施工单位"
                    android:singleLine="true"
                    android:textColor="@color/text_6"
                    android:textColorHint="@color/text_9"
                    android:textSize="@dimen/text_size_for_fourteen" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/divider"></View>
            <LinearLayout
                android:id="@+id/bhmc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/disease_com_item_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:text="*"
                    android:textColor="#ef1515"
                    android:textSize="@dimen/text_size_for_twenty" />

                <TextView
                    android:id="@+id/disease_custom_edit_item_bhmc_label_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="施工类型"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_for_fifteen" />

                <TextView
                    android:id="@+id/disease_custom_edit_item_bhmc_txt_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:ellipsize="middle"
                    android:hint="请选择施工类型"
                    android:singleLine="true"
                    android:textColor="@color/text_6"
                    android:textColorHint="@color/text_9"
                    android:textSize="@dimen/text_size_for_fourteen" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/divider"/>
            <LinearLayout
                android:id="@+id/jldw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/disease_com_item_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:text="*"
                    android:textColor="#ef1515"
                    android:textSize="@dimen/text_size_for_twenty" />

                <TextView
                    android:id="@+id/jldw_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计量单位"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_for_fifteen" />

                <TextView
                    android:id="@+id/jldw_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="@color/text_6"
                    android:textColorHint="@color/text_9"
                    android:textSize="@dimen/text_size_for_fourteen" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:text="*"
                    android:textColor="#ef1515"
                    android:textSize="@dimen/text_size_for_twenty" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="任务要求"
                    android:textColor="@color/text_6"
                    android:textSize="@dimen/text_size_for_fifteen" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="#FAFAFA"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <EditText
                    android:paddingTop="10dp"
                    android:paddingBottom="30dp"
                    android:background="@null"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_for_thirteen"
                    android:id="@+id/czwt_et"
                    android:hint="请录入不超过300字的任务要求"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:id="@+id/czwt_bu"
                        android:background="#94d1ff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <ImageView
                        android:src="@drawable/xcrz_xiangqing_yuying_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/shang"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/plys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/upload_btn_sel"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_for_fifteen" />
    </LinearLayout>

    <View
        android:id="@+id/activity_new_disease_zhe_zhao_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        android:visibility="gone">

    </View>
</RelativeLayout>
